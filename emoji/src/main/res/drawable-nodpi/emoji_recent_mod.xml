<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <layer-list>

            <item android:height="80dp" android:width="80dp">
                <shape
                    android:shape="oval"
                    android:innerRadiusRatio="1">
                    <solid android:color="@color/emoji_gray20"/>
                </shape>


            </item>
            <item android:top="11dp" android:left="10dp"   android:height="60dp" android:width="60dp">
                <bitmap android:src="@drawable/emoji_recent"/>
            </item>
        </layer-list>

    </item>
    <item android:state_selected="false" >
        <layer-list>
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <bitmap android:src="@drawable/emoji_recent"/>
            </item>
        </layer-list>

    </item>
</selector>